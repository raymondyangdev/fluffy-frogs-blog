<div class="p-4 md:p-8">
    {{#if toastMessage}}
    <p class="bg-blue-100 text-blue-700 py-2 px-4 rounded-md mb-4">{{toastMessage}}</p>
    {{/if}}

    <form action="./uploadblog" method="POST" enctype="multipart/form-data" class="space-y-4">
        <label class="block text-gray-700">Blog title</label>
        <input type="text" name="articleTitle" required {{#if savedArticle.title}}value="{{savedArticle.title}}" {{/if}}
            class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-indigo-300">

        <label for="imgFile" class="block text-gray-700">Upload your blog's primary image here</label>
        <input id="imgFile" type="file" name="articlePhoto" accept=".png,.jpg,.jpeg,.bmp,.gif" required
            class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-indigo-300">

        <label class="block text-gray-700">Select a plant category</label>
        <select name="plantId" required
            class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-indigo-300">
            <optgroup label="Summer">
                <option value="1" {{#ifEq savedArticle.plantId 1}} selected{{/ifEq}}>Tomato</option>
                <option value="2" {{#ifEq savedArticle.plantId 2}} selected{{/ifEq}}>Sunflower</option>
                <option value="3" {{#ifEq savedArticle.plantId 3}} selected{{/ifEq}}>Corn</option>
                <option value="4" {{#ifEq savedArticle.plantId 4}} selected{{/ifEq}}>Pepper</option>
            </optgroup>
            <optgroup label="Autumn">
                <option value="5" {{#ifEq savedArticle.plantId 5}} selected{{/ifEq}}>Pumpkin</option>
                <option value="6" {{#ifEq savedArticle.plantId 6}} selected{{/ifEq}}>Radish</option>
                <option value="7" {{#ifEq savedArticle.plantId 7}} selected{{/ifEq}}>Broccoli</option>
                <option value="8" {{#ifEq savedArticle.plantId 8}} selected{{/ifEq}}>Pea</option>
            </optgroup>
            <optgroup label="Winter">
                <option value="9" {{#ifEq savedArticle.plantId 9}} selected{{/ifEq}}>Broad Bean</option>
                <option value="10" {{#ifEq savedArticle.plantId 10}} selected{{/ifEq}}>Taro</option>
                <option value="11" {{#ifEq savedArticle.plantId 11}} selected{{/ifEq}}>Kale</option>
                <option value="12" {{#ifEq savedArticle.plantId 12}} selected{{/ifEq}}>Carrot</option>
            </optgroup>
            <optgroup label="Spring">
                <option value="13" {{#ifEq savedArticle.plantId 13}} selected{{/ifEq}}>Asparagus</option>
                <option value="14" {{#ifEq savedArticle.plantId 14}} selected{{/ifEq}}>Spring Onion</option>
                <option value="15" {{#ifEq savedArticle.plantId 15}} selected{{/ifEq}}>Kumara</option>
                <option value="16" {{#ifEq savedArticle.plantId 16}} selected{{/ifEq}}>Potato</option>
            </optgroup>
        </select>

        <label class="block text-gray-700">Content</label>
        <textarea name="content" id="content"
            class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-indigo-300">{{#if savedArticle.content}}{{savedArticle.content}}{{/if}}</textarea>

        <button type="submit"
            class="bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600 focus:outline-none focus:ring focus:ring-indigo-300">Submit</button>
    </form>
</div>