<div class="bg-white p-4 md:p-8 rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold mb-4">Search results for: {{query}}</h1>

    {{#if results}}
    {{#each results}}
    <div class="mb-4 border-b border-gray-300 pb-2">
        <a href="/articles/{{this.id}}" class="text-blue-500 hover:underline text-xl font-semibold">{{this.title}}</a>
        <p class="text-gray-600">{{this.name}}</p>
        <p class="text-gray-400">{{this.timeOfPost}}</p>
    </div>
    {{/each}}
    {{else}}
    <p class="text-gray-600">No results found</p>
    {{/if}}
</div>